<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#727272" />
            <gradient android:angle="0" android:startColor="#666666" android:endColor="#777777"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#DDDDDD" />
            <solid android:color="#DDDDDD"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#BBBBBB" />
            <gradient android:angle="-90" android:startColor="#AAAAAA" android:endColor="#CCCCCC" />
        </shape>
    </item>
</selector>